- if notice
  %p.notice= notice

%section.depot_form
  %h1= t('.legend')
  = render 'form'

  = form_with(local: true, id: 'espago_form', url: 'charge_client', method: 'post') do |form|
    %script{  async: "", 
              "data-button" => "Pay", 
              "data-id" => "EspagoFrameScript", 
              "data-key" => @public_key, 
              "data-live" => "false",
              "data-target" => 'espago_form',
              src: "https://js.espago.com/iframe-1.0.js" }
    
    = form.hidden_field :amount, value: @cart_price

    .actions
      = form.button 'Iframe', id: 'pay_button'

= javascript_include_tag('https://js.espago.com/espago-1.2.js')
= javascript_pack_tag('pay_type')
= javascript_pack_tag('iframe')
