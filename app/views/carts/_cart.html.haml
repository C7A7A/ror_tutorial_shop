%article
  - if notice
    %aside#notice= notice

  %h2= t('.title')
  %table
    = render(cart.line_items)
    %tfoot
      %tr
        %th{ :colspan => "2" } Total:
        %td.price= number_to_currency(cart.total_price)
  
  .actions
    = button_to t('.empty'), cart, method: :delete, data: { confirm: 'Are you sure?' }
    = button_to t('.checkout'), new_order_path(locale: I18n.locale), method: :get, class: 'checkout'
    