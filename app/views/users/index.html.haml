- if notice
  %p#notice 
    = notice

%h1 Users

%table
  %thead
    %tr
      %th Name
      %th{ :colspan => '3' }

  %tbody
    - @users.each do |user|
      %tr
        %td= user.name
        %td= link_to 'Show', user 
        %td= link_to 'Edit', edit_user_path(user)
        %td= link_to 'Destroy', method: :delete, data: {confirm: 'Are you sure?' }
  
%br/

= link_to 'New User', new_user_path